{
  "name": "lancecerto",
  "version": "1.0.0",
  "description": "LanceCerto.ai - Plataforma para gerar propostas comerciais com IA",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && node index.js",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "kill-ports": "powershell -ExecutionPolicy Bypass -File scripts/kill-ports.ps1",
    "clean": "npm run kill-ports"
  },
  "keywords": ["freelancer", "proposals", "ai", "gemini"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

